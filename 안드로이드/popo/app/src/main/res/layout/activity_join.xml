<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:background="@drawable/roundlayout"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    tools:layout_editor_absoluteY="81dp"
    >

    <!--
    <회원가입 화면>
    시작 : 2018.11.03
    작성 : 신초희
    -->


    <EditText
        android:id="@+id/emailText"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/joinbox"
        android:ems="10"
        android:fontFamily="@font/robotolight"
        android:hint="  이메일을 입력해주세요."
        android:inputType="textEmailAddress"
        android:textColor="#262734"
        android:textColorHint="#838EA1"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <EditText
        android:id="@+id/pwText"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/joinbox"
        android:hint="  비밀번호를 설정해주세요."
        android:fontFamily="@font/robotolight"
        android:inputType="textPassword"
        android:textColor="#262734"
        android:textColorHint="#838EA1"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />

    <EditText
        android:id="@+id/pwConfirmText"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/joinbox"
        android:hint="  비밀번호 확인을 입력해주세요."
        android:fontFamily="@font/robotolight"
        android:inputType="textPassword"
        android:textColor="#262734"
        android:textColorHint="#838EA1"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwText" />

    <EditText
        android:id="@+id/yearText"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/joinbox"
        android:hint="  학번을 입력해주세요(ex. 16, 17,18)"
        android:fontFamily="@font/robotolight"
        android:inputType="number"
        android:textColor="#262734"
        android:textColorHint="#838EA1"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwConfirmText" />

    <Button
        android:id="@+id/emailAuthButton"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/joinlectangle"
        android:onClick="eAuthClick"
        android:text="인증하기"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yearText" />

</android.support.constraint.ConstraintLayout>
